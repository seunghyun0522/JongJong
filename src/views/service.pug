//- 변수 정의
- const background_color = "#dc143c"

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title 종종

    // CSS 속성 초기화
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css", integrity="sha512-NhSC1YmyruXifcj/KFRWoC561YpHpc5Jtzgvbuzx5VozKpWvQ+4nXhPdFgmx8xqexRcpAglTj9sIBWINXa8x5w==", crossorigin="anonymous", referrerpolicy="no-referrer")

    // 파비콘 설정
    link(rel="icon", href="/image/white_logo.png")

    // 폰트 설정
    link(href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@500&display=swap", rel="stylesheet")

    // CSS 연결
    link(rel="stylesheet", href="css/style.css")

    // jQuery CDN
    script(src="//code.jquery.com/jquery-1.11.3.min.js")

    // Bootstrap CDN
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js")
  body(style="background-color: #{background_color}")
    header
      img.logoImg(src="image/walk.gif")
      .inner
        .title
          .logo
            a(href="https://trankill1127.github.io/jongJong/", target="_self") 종종
          .subLogo 세종대 최적경로 안내 서비스

    // 카카오 맵
    section
      .map_wrap
        #map(style="width:100%;height:100%;position:relative;overflow:hidden;")
        // 지도타입 컨트롤 div
        .custom_typecontrol.radius_border
          span#btnRoadmap.selected_btn(onclick="setMapType('roadmap')") 지도
          span#btnSkyview.btn(onclick="setMapType('skyview')") 스카이뷰
        // 지도 확대, 축소 컨트롤 div
        .custom_zoomcontrol.radius_border
          div(onclick="zoomIn()") 
            img(src="./image/ico_plus.png", alt="")
          div(onclick="zoomOut()") 
            img(src="./image/ico_minus.png", alt="")

      script(type="text/javascript", src="//dapi.kakao.com/v2/maps/sdk.js?appkey=28fee11b0a4261c36abc053b39d07669")
      script(src="/client/map.js")

    // 검색 관련
    section
      .search_wrap
        form.search_form
          .search_text
            input#start(type="text", placeholder="출발지를 입력하세요")
            br
            input#finish(type="text", placeholder="도착지를 입력하세요")
            br
          button.btn.btn-lg.btn-light#search_button(type="button", onclick="mainFunc()") 검색

    // 안내문
    section
      .caution_1
        | 1. 출발지와 도착지의 명칭을 정확하게 입력해주셔야 합니다.
      table.buildings
        // 캠퍼스 내 건물들의 이름들을 담은 표
        tr.align-center(bgcolor="white")
          td 정문
          td 후문
          td 쪽문1
          td 쪽문2
        tr.align-center(bgcolor="white")
          td 쪽문3
          td 모차르트홀
          td 대양홀
          td 집현관
        tr.align-center(bgcolor="white")
          td 학생회관
          td 세종관
          td 군자관
          td 광개토관
        tr.align-center(bgcolor="white")
          td 이당관
          td 진관홀
          td 용덕관
          td 애지헌
        tr.align-center(bgcolor="white")
          td 영실관
          td 충무관
          td 다산관
          td 율곡관
        tr.align-center(bgcolor="white")
          td 우정당
          td 학술정보원
          td 박물관
          td 대양AI센터
      .caution_2
        | 2. 웹 브라우저로 이용하시는 경우 위치 추적 서비스를 지원하지 않습니다.

    // 푸터
    footer
      .inner
        .copyright
          a(href="https://github.com/trankill1127/jongJong", target="_blank") © 2022. 등차수열 all rights reserved.

    // js 연결
    script(src="/client/mapping.js")
